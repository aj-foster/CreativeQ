      <section>
        <h2 class="mtm">Notifications</h2>
        <div class="list">
<% @notifications.each do |notification| %>
          <div class="tile tile--twoline" id="notification_<%= notification.id %>">
            <%= link_to view_and_destroy_notification_path(notification), method: :delete, class: "tile-focus", title: "View Order" do %>
              <div class="tile-title"><%= notification.title %></div>
              <div class="tile-subtitle"><%= notification.message %></div>
            <% end %>
            <%= link_to notification_path(notification), remote: true, method: :delete, class: "icon", title: "Remove" do %>
              <svg>
                <use xlink:href="#icon-cross"></use>
                <foreignObject display="none">
                  Remove
                </foreignObject>
              </svg>
            <% end %>
          </div>
<% end %>
          <div class="tile tile--placeholder">
            You don't currently have any notifications.
          </div>
        </div>
      </section>