			<section>
<% if @unapproved.any? %>
				<table>
					<caption>Unapproved Users</caption>
					<tr>
						<th>Name</th>
						<th>E-Mail</th>
						<th></th>
					</tr>
	<% @unapproved.each do |user| %>
					<tr>
						<th><%= user.name %></th>
						<td><a href="<%= user.email %>"><%= user.email %></a></td>
						<td>
<% if can? :update, user %>
							<%= link_to "Edit Profile", user, :class => "button button-neutral" %>
<% end %>
<% if can? :destroy, user %>
							<%= link_to "Remove", user, method: :delete, :class => "button button-alert" %>
<% end %>
						</td>
					</tr>
	<% end %>
				</table>
<% end %>

				<table>
					<caption>Users</caption>
					<tr>
						<th>Name</th>
						<th>E-Mail</th>
						<th>Organizations</th>
						<th>Role</th>
						<th></th>
					</tr>
<% @users.each do |user| %>
					<tr>
						<th><%= user.name %></th>
						<td><a href="<%= user.email %>"><%= user.email %></a></td>
						<td><%= user.organizations.order(name: :asc).map(&:name).join(', ') %></td>
						<td><%= user.role %></td>
						<td>
<% if can? :update, user %>
							<%= link_to "Edit Profile", user, :class => "button button-neutral" %>
<% end %>
<% if can? :destroy, user %>
							<%= link_to "Remove", user, method: :delete, :class => "button button-alert", confirm: "Are you sure you'd like to remove #{user.name}?" %>
<% end %>
						</td>
					</tr>
<% end %>
				</table>
			</section>