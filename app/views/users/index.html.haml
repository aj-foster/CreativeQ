.row.mbm
	.cell.cell--s
		= link_to "See Retired", retired_users_path, class: "button"

.row.row--s
	.cell.cell--s
		- if @unapproved.any?
			.card.card--s
				.card-section
					%h2.card-title Unapproved Users
					.card-subtitle Awaiting role and organization assignment
				.list
					- @unapproved.each do |user|
						= render 'listing', user: user

		.card.card--s
			.card-section
				%h2.card-title Users
				.card-subtitle All non-retired users
			- if @users.any?
				.list
					- @users.each do |user|
						= render 'listing', user: user
			- else
				.card-section
					%p.tac There aren't any users, yet.