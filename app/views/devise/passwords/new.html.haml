.row.row--s
  .cell.cell--s
    .card.card--s
      .card-section
        %h2.card-title Forgot your password?
        .card-subtitle Reset it using your e-mail
      .card-section
        = form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post } do |f|

          .field.field--text{class: (resource.errors.include? :email) ? 'has-error' : ''}
            = f.label :email, "E-mail"
            = f.email_field :email, autofocus: true
            - if resource.errors.include? :email
              .field--text-error
                = resource.errors.full_messages_for(:email).first

          %p= f.submit "Send Instructions", class: "button button-okay"

        %p Alternatively, you might want to
        %p
          = link_to "Sign In", new_session_path(resource_name), class: "button"
          = link_to "Apply for an account", new_registration_path(resource_name), class: "button"